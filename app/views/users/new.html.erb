
<section class="intro">
</section>
<form class='login-form' action="/users" method="POST">
<h2>Find Adventure</h2>
  <%= auth_token %>
  <div class="input-group">
    <i class="user fa fa-user fa-1x"></i>
    <input type="text" placeholder='Name' id='name' name='user[name]'>
  </div>

  <div class="input-group">
    <i class="email fa fa-envelope-o fa-1x"></i>
    <input type="text" placeholder='Email' id='email' name='user[email]'>
  </div>

  <div class="input-group">
    <i class="lock fa fa-lock fa-1x"></i>
    <input type="password" placeholder='Password' id='password' name='user[password]'>
  </div>
  
   <button type="submit" class="form-button hover-button">Join the Community</button>
   <span> Already a user? <%= link_to "Sign in here", new_session_url %> </span>
</form>