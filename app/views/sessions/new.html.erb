
<h2>Sign In</h2>
<form action="/session" method="POST">
  <%= auth_token %>
  <div class="form-group">
    <label for="email">Enter your email</label>
    <input type="text" class='form-control' id='email' name='user[email]'>
  </div>

  <div class="form-group">
    <label for="password">Enter a Password (min 6 characters)</label>
    <input type="password" class='form-control' id='password' name='user[password]'>
  </div>

   <button type="submit" class="btn btn-success">Sign in</button> 
   <span> New to the site? <%= link_to "Sign up here", new_user_url %> </span>
</form>
